# syntax=docker/dockerfile:1

FROM node:25-alpine

WORKDIR /app

COPY prms-dashboard-v2/package*.json ./
RUN npm ci --prefer-offline --no-audit

COPY prms-dashboard-v2/ .

RUN addgroup -S appuser && adduser -D -S -G appuser appuser && chown -R appuser:appuser /app
USER appuser

EXPOSE 5177

CMD ["npm", "run", "dev"]
